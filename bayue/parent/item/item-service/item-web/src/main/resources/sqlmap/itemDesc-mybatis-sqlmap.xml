<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ng.bayue.item.domain.ItemDescMapper">

	<resultMap type="ng.bayue.item.domain.ItemDescDO" id="ItemDescDOResultMap">
		<id column="id" property="id" />
        <result column="item_id" property="itemId"/>
        <result column="detail_id" property="detailId"/>
        <result column="description" property="description"/>
        <result column="create_user_id" property="createUserId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_user_id" property="modifyUserId"/>
        <result column="modify_time" property="modifyTime"/>
	</resultMap>

	<sql id="MybatisItemDescDAO_all_column_fields">
	      id,item_id,detail_id,description,create_user_id,create_time,modify_user_id,modify_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisItemDescDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="itemId != null "> AND item_id=#{itemId} </if>
			<if test="detailId != null "> AND detail_id=#{detailId} </if>
			<if test="description != null  and description != '' "> AND description=#{description} </if>
			<if test="createUserId != null "> AND create_user_id=#{createUserId} </if>
			<if test="modifyUserId != null "> AND modify_user_id=#{modifyUserId} </if>
		</where>
 	</sql>

	<select id="MybatisItemDescDAO_selectById" parameterType="long" resultMap="ItemDescDOResultMap">
	SELECT
		<include refid="MybatisItemDescDAO_all_column_fields" />
	FROM
		item_desc
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisItemDescDAO_insert" parameterType="ng.bayue.item.domain.ItemDescDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO item_desc(
				id,
				item_id,
				detail_id,
				description,
				create_user_id,
				create_time,
				modify_user_id,
				modify_time
		)values(
				#{id},
				#{itemId},
				#{detailId},
				#{description},
				#{createUserId},
				#{createTime},
				#{modifyUserId},
				#{modifyTime}
		)
    </insert>

	<update id="MybatisItemDescDAO_updateById" parameterType="ng.bayue.item.domain.ItemDescDO">
		UPDATE item_desc
		SET
					item_id = #{itemId},
					detail_id = #{detailId},
					description = #{description},
					create_user_id = #{createUserId},
					modify_user_id = #{modifyUserId},
					modify_time = #{modifyTime}
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisItemDescDAO_deleteById" parameterType="long">
		DELETE FROM item_desc WHERE id = #{id}
	</delete>

	<update id="MybatisItemDescDAO_update_dynamic" parameterType="ng.bayue.item.domain.ItemDescDO">
		UPDATE item_desc
		<set>
					<if test="itemId != null ">item_id=#{itemId},</if>
					<if test="detailId != null ">detail_id=#{detailId},</if>
					<if test="description != null  and description != '' ">description=#{description},</if>
					<if test="createUserId != null ">create_user_id=#{createUserId},</if>
					<if test="modifyUserId != null ">modify_user_id=#{modifyUserId},</if>
					<if test="modifyTime != null ">modify_time=#{modifyTime},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisItemDescDAO_select_dynamic" resultMap="ItemDescDOResultMap" parameterType="ng.bayue.item.domain.ItemDescDO">
	     SELECT
	     	<include refid="MybatisItemDescDAO_all_column_fields" />
		 FROM
		 	item_desc
			<include refid="MybatisItemDescDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisItemDescDAO_select_dynamic_count" resultType="long" parameterType="ng.bayue.item.domain.ItemDescDO">
	     SELECT
	     	count(1)
		 FROM
		 	item_desc
	 	<include refid="MybatisItemDescDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisItemDescDAO_select_dynamic_page_query" resultMap="ItemDescDOResultMap" parameterType="ng.bayue.item.domain.ItemDescDO">
	     SELECT
	     	<include refid="MybatisItemDescDAO_all_column_fields" />
		 FROM
		 	item_desc
	 	<include refid="MybatisItemDescDAO_dynamic_where_fields" />
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>