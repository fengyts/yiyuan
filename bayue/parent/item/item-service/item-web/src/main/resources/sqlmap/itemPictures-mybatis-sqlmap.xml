<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ng.bayue.item.domain.ItemPicturesMapper">

	<resultMap type="ng.bayue.item.domain.ItemPicturesDO" id="ItemPicturesDOResultMap">
		<id column="id" property="id" />
        <result column="item_id" property="itemId"/>
        <result column="detail_id" property="detailId"/>
        <result column="picture" property="picture"/>
        <result column="is_master" property="isMaster"/>
        <result column="create_time" property="createTime"/>
	</resultMap>

	<sql id="MybatisItemPicturesDAO_all_column_fields">
	      id,item_id,detail_id,picture,is_master,create_time
 	</sql>
	<!-- 只有varchar char text类型 做 !='' 判断，生成代码时,其他类型时只做!=null 决断 0或fasle与空''是相同的，在mybatis中的动态语句中 -->
	<sql id="MybatisItemPicturesDAO_dynamic_where_fields"><!-- xml转义字符需要 <![CDATA[   ]]> 标签-->
		<where>
			<if test="itemId != null "> AND item_id=#{itemId} </if>
			<if test="detailId != null "> AND detail_id=#{detailId} </if>
			<if test="picture != null  and picture != '' "> AND picture=#{picture} </if>
			<if test="isMaster != null "> AND is_master=#{isMaster} </if>
		</where>
 	</sql>

	<select id="MybatisItemPicturesDAO_selectById" parameterType="long" resultMap="ItemPicturesDOResultMap">
	SELECT
		<include refid="MybatisItemPicturesDAO_all_column_fields" />
	FROM
		item_pictures
	WHERE
		 id = #{id}
	</select>

    <insert id="MybatisItemPicturesDAO_insert" parameterType="ng.bayue.item.domain.ItemPicturesDO" useGeneratedKeys="true">
        <selectKey resultType="long" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO item_pictures(
				id,
				item_id,
				detail_id,
				picture,
				is_master,
				create_time
		)values(
				#{id},
				#{itemId},
				#{detailId},
				#{picture},
				#{isMaster},
				#{createTime}
		)
    </insert>

	<update id="MybatisItemPicturesDAO_updateById" parameterType="ng.bayue.item.domain.ItemPicturesDO">
		UPDATE item_pictures
		SET
					item_id = #{itemId},
					detail_id = #{detailId},
					picture = #{picture},
					is_master = #{isMaster},
		WHERE
			id = #{id}
	</update>

	<delete id="MybatisItemPicturesDAO_deleteById" parameterType="long">
		DELETE FROM item_pictures WHERE id = #{id}
	</delete>

	<update id="MybatisItemPicturesDAO_update_dynamic" parameterType="ng.bayue.item.domain.ItemPicturesDO">
		UPDATE item_pictures
		<set>
					<if test="itemId != null ">item_id=#{itemId},</if>
					<if test="detailId != null ">detail_id=#{detailId},</if>
					<if test="picture != null  and picture != '' ">picture=#{picture},</if>
					<if test="isMaster != null ">is_master=#{isMaster},</if>
		</set>
		WHERE id = #{id}
	</update>

 	<select id="MybatisItemPicturesDAO_select_dynamic" resultMap="ItemPicturesDOResultMap" parameterType="ng.bayue.item.domain.ItemPicturesDO">
	     SELECT
	     	<include refid="MybatisItemPicturesDAO_all_column_fields" />
		 FROM
		 	item_pictures
			<include refid="MybatisItemPicturesDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisItemPicturesDAO_select_dynamic_count" resultType="long" parameterType="ng.bayue.item.domain.ItemPicturesDO">
	     SELECT
	     	count(1)
		 FROM
		 	item_pictures
	 	<include refid="MybatisItemPicturesDAO_dynamic_where_fields" />
 	</select>

 	<select id="MybatisItemPicturesDAO_select_dynamic_page_query" resultMap="ItemPicturesDOResultMap" parameterType="ng.bayue.item.domain.ItemPicturesDO">
	     SELECT
	     	<include refid="MybatisItemPicturesDAO_all_column_fields" />
		 FROM
		 	item_pictures
	 	<include refid="MybatisItemPicturesDAO_dynamic_where_fields" />
	 	Limit #{start},#{pageSize}
 	</select>

</mapper>